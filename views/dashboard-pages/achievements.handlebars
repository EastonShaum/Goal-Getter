<div class="row container mx-auto g-4">
{{>dashboard/new-goal-modal loggedInUser}}
<div class="d-flex justify-content-between align-items-center">
    <h3 class="text-primary">Achievements</h3>
    <p class="text-darkest-light fs-6 my-auto" type="button" id="new-goal-btn" data-bs-toggle="modal" data-bs-target="#new-goal-modal"><span class="fw-bold">+</span> Create a New Goal</p>
</div>
    <hr class="m-1">
    {{#if goals}}
    {{#each goals as |goal|}}
        {{>completedGoalCard goal}}
    {{/each}}
    {{else}}
        <h5 class="text-darkest-light">Looks like you haven't finished any of your goals yet! Lets get cracking! <a type="button" href="/dashboard" class="text-primary link-unstyled">Click here to view your active goals!</a></h5>
    {{/if}}
</div>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="../assets/js/logout.js"></script>
<script src="../assets/js/tooltips.js"></script>
<script src="../assets/js/newGoal.js"></script>