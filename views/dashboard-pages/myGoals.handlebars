<div class="row container mx-auto g-4">
{{>dashboard/new-goal-modal loggedInUser}}
<div class="d-flex justify-content-between align-items-center">
    <h3 class="text-primary">My Goals</h3>
    <p class="text-darkest-light fs-6 my-auto" type="button" id="new-goal-btn" data-bs-toggle="modal" data-bs-target="#new-goal-modal"><span class="fw-bold">+</span> Create a New Goal</p>
</div>
    <hr class="m-1">
    {{#if goals}}
    {{#each goals as |goal|}}
        {{>goalCard goal}}
    {{/each}}
    {{else}}
        <h5 class="text-darkest-light">Looks like your Goal board is empty! There is no better time to start a new goal than right now! <span type="button" id="new-goal-btn" data-bs-toggle="modal" data-bs-target="#new-goal-modal" class="text-primary">Click here to get started!</span></h5>
    {{/if}}
</div>