<div class="collapse mb-3" id="milestone-collapsable-div">
    <div class="card card-body p-2">
        <form>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="goal-title-input"
                    placeholder="Enter your milestone name here">
                <label for="milestone-title-input">Milestone Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="datetime-local" class="form-control" id="due-date-input"
                    placeholder="Provide an Achievement Date">
                <label for="due-date-input">Due Date</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Provide a description for your "
                    id="milestone-description-input" style="height: 200px" spellcheck="true"></textarea>
                <label for="milestone-description-input">Milestone Description</label>
            </div>
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" value="" id="public-milestone-checkbox">
                <label class="form-check-label" for="public-milestone-checkbox">
                    Would you like this milestone to be visible to other Goal Getters?
                </label>
            </div>
            <div class="d-flex justify-content-end mt-2">
                <button type="submit" class="btn btn-secondary py-0 me-2">Save</button>
                <a href="/dashboard" type="button" class="link-unstyled mx-2 p-0 my-auto" data-bs-toggle="collapse"
                    data-bs-target="#milestone-collapsable-div">Cancel</a>
            </div>
        </form>
    </div>
</div>